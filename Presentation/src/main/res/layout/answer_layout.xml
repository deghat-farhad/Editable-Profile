<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtViwSingleSelectionHeader"
        style="@style/TextViewSingleSelectionHeaderTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        tools:text="@string/religion" />

    <TextView
        android:id="@+id/txtViwSingleSelectionValue"
        style="@style/TextViewSingleSelectionValueTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/religiousValue"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"/>

</LinearLayout>